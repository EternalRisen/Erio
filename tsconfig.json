{
    "compilerOptions": {
        "lib": ["es2015", "es2016.array.include", "es2017.object", "dom"],
        "jsx": "react",
        "esModuleInterop": true,
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "allowJs": true,
        "checkJs": true,
    },
    "types": ["node"],
    "exclude": [
        "./.*-dist/**/*"
    ],
    "include": [
        "./src/**/*.ts",
		"./www;**/*.ts"
    ]
}